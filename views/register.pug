extends layout

block content
    div(class='box register')
        h1 Puzzled Judge
        hr
        h2 Problem Solving
        form(method='POST', action='/register')
            div(class='text')
                a Email
                input(name = 'email' class='loginInput' type='text')
            div(class='text')
                a Username
                input(name = 'username' class='loginInput' type='text')
            div(class='text')
                a Full Name
                input(name = 'fullName' class='loginInput' type='text')
            div(class='password')
                a Password
                input(name = 'password' class='loginInput' type='password')
            div(class='buttons')
                input(name='login' class='login' value='Login' type='submit')
                input(name='register' class='register' value='Register' type='submit')